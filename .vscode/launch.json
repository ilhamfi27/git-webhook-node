{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Fastify (TS)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 9229,
      "autoAttachChildProcesses": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Production Build",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/index.js",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
